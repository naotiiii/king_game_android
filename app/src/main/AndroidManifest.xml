<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hato.king_game">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        >
<!--        android:theme="@style/Theme.King_game"-->

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-8858591747711781~9002255144"/>

        <activity
            android:name="com.hato.king_game.Activity.MainActivity"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.hato.king_game.Activity.PlayActivity"
            android:label="@string/app_title"
            android:screenOrientation="portrait"
            />
        <activity android:name="com.hato.king_game.Activity.KingActivity"
            android:label="@string/empty"
            android:screenOrientation="portrait"
            />
        <activity android:name="com.hato.king_game.Activity.CitizenActivity"
            android:label="@string/empty"
            android:screenOrientation="portrait"
             
            />
    </application>

</manifest>